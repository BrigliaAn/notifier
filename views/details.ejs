<!-- Detailed view of specific notification -->
<div class="panel panel-details panel-primary">
    <% if (notification) {%>
      <div class="panel-heading panel-heading-details uppercase-title"><span class="glyphicon glyphicon-bullhorn"></span>
        <%= notification.title %>
      </div>
      <div class="panel-body">
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
          <small class="text-muted"><i class="glyphicon glyphicon-calendar"></i> FECHA: <%= moment(notification.date).format('DD/MM/YYYY')  %> </small>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
          <small class="text-muted"><i class="glyphicon glyphicon-time"></i> HORA: <%= moment(notification.date).format('h:mm:ss a')  %> </small>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
          <small class="text-muted"><i class="glyphicon glyphicon-flag"></i>
        <% if (notification.office_id == 1){ %>
              OFICINA: Escobar
        <% } %>
        <% if (notification.office_id == 2){ %>
              OFICINA: Derqui
        <% } %>
          </small>
        </div>
        <hr />
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="details-panel">
          <%- notification.content %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <hr />
            <small>NOTIFICADA: 
            <% if(notification.notified){ %>
        		  SÃ­
            <% } else{ %>
              No
            <% } %>
            </small>
        </div>     
      </div>         
     <% }%>
</div>
<!-- end detailed view -->