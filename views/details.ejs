<!-- Detailed view of specific notification -->
<div class="panel panel-primary">
    <% if (notification) {%>
    <div class="panel-heading notification-title"><span class="glyphicon glyphicon-bullhorn"></span> <%= notification.title %></div>
      <div class="panel-body">
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
          Fecha:<%= moment(notification.date).format('DD/MM/YYYY')  %>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
          Hora:<%= moment(notification.date).format('h:mm:ss a')  %>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
        <% if (notification.office_id == 1){ %>
              Oficina: Escobar
        <% } %>
        <% if (notification.office_id == 2){ %>
              Oficina: Derqui
        <% } %>
        </div>
        <hr />
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="word-wrap: break-word;">
          <%- notification.content %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <hr />
            Notificada:
            <% if(notification.notified){ %>
        		  SÃ­
            <% } else{ %>
              No
            <% } %>
        </div>     
      </div>         
     <% }%>
</div>
<!-- end detailed view -->